<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#fcfcfc"/>

    <!-- 둥근 모서리 -->
    <corners android:radius="20dp"/>

    <!-- 테두리 -->
    <stroke
        android:width="1.5dp"
        android:color="#242424"/>

    <!-- 내부 여백 효과 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>

</shape>
