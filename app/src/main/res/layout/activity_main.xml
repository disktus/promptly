<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/grass_bg"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Login View -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/login_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="nickname_edit_text,check_nickname_button" />

    <EditText
        android:id="@+id/nickname_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintWidth_percent="0.7"

        android:minHeight="44dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp"
        android:hint="닉네임을 입력해주세요"
        android:fontFamily="@font/seoul_alrim_medium"
        android:textSize="14sp"
        android:gravity="center_vertical|center_horizontal"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/check_nickname_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingVertical="8dp"
        android:textSize="14sp"
        android:text="로그인"
        android:fontFamily="@font/seoul_alrim_medium"
        android:backgroundTint="#a7c961"
        app:layout_constraintTop_toBottomOf="@id/nickname_edit_text"
        app:layout_constraintStart_toStartOf="@id/nickname_edit_text"
        app:layout_constraintEnd_toEndOf="@id/nickname_edit_text"/>


    <!-- Profile View -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/profile_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="welcome_text,logout_button" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/seoul_alrim_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="로그아웃"
        android:backgroundTint="#a7c961"
        android:fontFamily="@font/seoul_alrim_medium"
        app:layout_constraintEnd_toEndOf="@+id/welcome_text"
        app:layout_constraintStart_toStartOf="@+id/welcome_text"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

</androidx.constraintlayout.widget.ConstraintLayout>