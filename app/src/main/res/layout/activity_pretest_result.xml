<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdcf72">

    <!-- 결과 텍스트 -->
    <TextView
        android:id="@+id/tv_result_intro"
        android:textSize="24sp"
        android:textColor="#363430"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingTop="12dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/seoul_alrim_extrabold"
        android:text="테스트 결과" />

    <!-- 구분선 -->
    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginBottom="32dp"
        android:background="#363430" />

    <!-- 총점 -->
    <TextView
        android:id="@+id/tv_final_score"
        android:textSize="72sp"
        android:textColor="#363430"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:fontFamily="@font/seoul_alrim_extrabold"
        android:layout_marginBottom="32dp"
        android:text="0점" />

    <!-- ✅ 둥근 테두리 박스 (기존 bar_container를 감싸는 부모) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:layout_marginHorizontal="20dp"
        android:padding="25dp"
        android:background="@drawable/rounded_box_bg"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- ✅ 기존 그래프 컨테이너 (ID 유지) -->
        <LinearLayout
            android:id="@+id/bar_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="명확성"
                    android:fontFamily="@font/seoul_alrim_bold"
                    android:textColor="#363430"
                    android:textSize="32sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_clarity"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="40dp"
                    android:scaleY="6"
                    android:progress="0"
                    android:max="20"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="구체성"
                    android:fontFamily="@font/seoul_alrim_bold"
                    android:textColor="#363430"
                    android:textSize="32sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_specificity"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="40dp"
                    android:scaleY="6"
                    android:progress="0"
                    android:max="20"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="형식"
                    android:fontFamily="@font/seoul_alrim_bold"
                    android:textColor="#363430"
                    android:textSize="32sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_logic"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="40dp"
                    android:scaleY="6"
                    android:progress="0"
                    android:max="20"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="역할"
                    android:fontFamily="@font/seoul_alrim_bold"
                    android:textColor="#363430"
                    android:textSize="32sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_creativity"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="40dp"
                    android:scaleY="6"
                    android:progress="0"
                    android:max="20"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="맥락"
                    android:fontFamily="@font/seoul_alrim_bold"
                    android:textColor="#363430"
                    android:textSize="32sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_context"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="40dp"
                    android:scaleY="6"
                    android:progress="0"
                    android:max="20"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seoul_alrim_bold"
            android:text="아주 좋아요! 조금만 더 다듬어봐요!"
            android:textColor="#363430"
            android:textSize="18sp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:src="@drawable/green_right_arrow"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:contentDescription="다음으로"/>
    </LinearLayout>

</LinearLayout>