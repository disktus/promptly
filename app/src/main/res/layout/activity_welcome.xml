<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="안녕하세요, [유저닉네임]님!\nAI 프롬프팅 실력을 확인해보세요."
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/darkText"
        android:fontFamily="@font/seoul_alrim_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStartTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnStartTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트 시작하기"
        android:paddingHorizontal="40dp"
        android:textSize="18sp"
        android:backgroundTint="@color/lightYellow"
        android:textColor="@color/darkText"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage"
        app:layout_constraintBottom_toTopOf="@id/tvdefinitionMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tvdefinitionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/darkText"
        android:text="AI 프롬프팅 (Prompting) : 인공지능에게 원하는\n결과를 얻기 위해 질문이나 명령을 입력하는 방법"
        android:fontFamily="@font/seoul_alrim_medium"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintTop_toBottomOf="@id/btnStartTest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
