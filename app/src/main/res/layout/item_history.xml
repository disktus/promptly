<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="14dp"
    android:orientation="vertical"
    android:background="#ecf0e1"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 날짜 -->
    <TextView
        android:id="@+id/tvHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-12-01"
        android:fontFamily="@font/seoul_alrim_medium"
        android:textSize="12sp"
        android:textColor="#363430"/>

    <!-- 조건 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvHistorySituation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상황: 과제"
            android:fontFamily="@font/seoul_alrim_medium"
            android:textSize="14sp"
            android:textColor="#363430"/>

        <TextView
            android:id="@+id/tvHistoryRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 직업: 대학생"
            android:fontFamily="@font/seoul_alrim_medium"
            android:textSize="14sp"
            android:textColor="#363430"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/tvHistoryDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 작성물: 보고서"
            android:fontFamily="@font/seoul_alrim_medium"
            android:textSize="14sp"
            android:textColor="#363430"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/tvHistoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 스타일: 객관적"
            android:fontFamily="@font/seoul_alrim_medium"
            android:textSize="14sp"
            android:textColor="#363430"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

</LinearLayout>
