<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">

    <!-- 결과 텍스트 -->
    <TextView
        android:id="@+id/tv_result_intro"
        android:textSize="24sp"
        android:textColor="#242424"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingTop="12dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/seoul_alrim_extrabold"
        android:text="테스트 결과" />

    <!-- 구분선 -->
    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginBottom="12dp"
        android:background="#242424" />

    <!-- 총점 -->
    <TextView
        android:id="@+id/tv_final_score"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="#121212"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:fontFamily="@font/seoul_alrim_extrabold"
        android:text="0점" />

    <!-- 그래프 컨테이너 -->
    <LinearLayout
        android:id="@+id/bar_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_marginHorizontal="14dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0.13dp"
            android:layout_marginVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="명확성"
                android:fontFamily="@font/seoul_alrim_medium"
                android:textColor="#292929"
                android:textSize="36sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress_clarity"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleY="6"
                android:layout_weight="1"
                android:progress="0"
                android:max="20"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0.13dp"
            android:layout_marginVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="구체성"
                android:fontFamily="@font/seoul_alrim_medium"
                android:textColor="#292929"
                android:textSize="36sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress_specificity"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleY="6"
                android:layout_weight="1"
                android:progress="0"
                android:max="20"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0.13dp"
            android:layout_marginVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="형식"
                android:fontFamily="@font/seoul_alrim_medium"
                android:textColor="#292929"
                android:textSize="36sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress_logic"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleY="6"
                android:layout_weight="1"
                android:progress="0"
                android:max="20"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="0.13dp"
            android:layout_marginVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="역할"
                android:fontFamily="@font/seoul_alrim_medium"
                android:textColor="#292929"
                android:textSize="36sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress_creativity"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleY="6"
                android:layout_weight="1"
                android:progress="0"
                android:max="20"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginVertical="3dp"
            android:padding="0.13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="맥락"
                android:fontFamily="@font/seoul_alrim_medium"
                android:textColor="#292929"
                android:textSize="36sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/progress_context"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scaleY="6"
                android:layout_weight="1"
                android:progress="0"
                android:max="20"/>
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_next"
        android:src="@drawable/right_arrow"
        android:background="@android:color/transparent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:scaleType="centerCrop"
        android:contentDescription="다음으로"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>
